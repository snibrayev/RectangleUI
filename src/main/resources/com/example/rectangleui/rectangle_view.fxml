<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rectangleui.RectangleController">
   <children>
      <GridPane layoutX="71.0" layoutY="50.0" prefHeight="300.0" prefWidth="458.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btn_area" mnemonicParsing="false" onAction="#btn_area_click" prefHeight="40.0" prefWidth="120.0" text="AREA" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="btn_perimeter" mnemonicParsing="false" onAction="#btn_perimeter_click" prefHeight="40.0" prefWidth="120.0" text="PERIMETER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label fx:id="lbl_length" prefHeight="40.0" prefWidth="180.0" text="Enter Length:" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label fx:id="lbl_width" prefHeight="40.0" prefWidth="180.0" text="Enter Width" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <TextField fx:id="txt_length" GridPane.columnIndex="1" />
            <TextField fx:id="txt_width" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label alignment="CENTER" prefHeight="89.0" prefWidth="229.0" text="Result" GridPane.rowIndex="3">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="lbl_result" alignment="CENTER" prefHeight="89.0" prefWidth="229.0" style="-fx-background-color: color;" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </children>
